	number = {1},
	urldate = {2013-12-12},
	journal = {Journal of Biogeography},
	author = {Loiselle, Bette A. and Jørgensen, Peter M. and Consiglio, Trisha and Jiménez, Iván and Blake, John G. and Lohmann, Lúcia G. and Montiel, Olga Martha},
	year = {2008},
	keywords = {Bolivia, collection bias, conservation biogeography, ecological niche modelling, Ecuador, herbarium data, {MAXENT}, species distribution models, Wallacean shortfall},
	pages = {105--116},
	file = {Snapshot:C\:\\Users\\pc\\AppData\\Roaming\\Mozilla\\Firefox\\Profiles\\ewj2idjd.default\\zotero\\storage\\ST2FC7GH\\abstract.html:text/html}
}

