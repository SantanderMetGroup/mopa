	month = jan,
	year = {2010},
	keywords = {Anthurium sp., group discriminative techniques, predictive performance, profile techniques, pseudo-absences, target-group absences},
	pages = {84--94},
	file = {Snapshot:C\:\\Users\\pc\\AppData\\Roaming\\Mozilla\\Firefox\\Profiles\\ewj2idjd.default\\zotero\\storage\\2XQQI7BH\\full.html:text/html}
