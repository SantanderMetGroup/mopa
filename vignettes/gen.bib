	number = {5},
	urldate = {2013-12-11},
	journal = {Diversity and Distributions},
	author = {Wisz, M. S. and Hijmans, R. J. and Li, J. and Peterson, A. T. and Graham, C. H. and Guisan, A. and Group, NCEAS Predicting Species Distributions Working},
	year = {2008},
	keywords = {ecological niche model, {MAXENT}, model comparison, {OM}-{GARP}, sample size, species distribution model},
	pages = {763--773},
